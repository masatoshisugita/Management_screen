<!DOCTYPE html>
<html>
  <head>
    <title>ManagementScreen</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="app-title navbar navbar-expand-md navbar-light bg-light">
      <div class="navbar-brand"><%= link_to '管理画面TOP',root_path %></div>

      <ul class="navbar-nav ml-auto">
        <li class="nav-item"><%= link_to '経歴書作成',new_resume_path, class: 'nav-link' %></li>
        <li class="nav-item"><%= link_to '経歴書一覧',resumes_path, class: 'nav-link' %></li>
      </ul>
    </div>

    <div class="container">

      <% if flash.notice.present? %>
      <div class="alert alert-success mt-3">
        <%= flash[:notice] %>
      </div>
      <% end %>

      <% if flash.alert.present? %>
        <div class="alert alert-warning mt-3">
        <%= flash[:alert] %>
      </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
